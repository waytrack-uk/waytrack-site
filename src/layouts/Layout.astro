---
// src/layouts/Layout.astro
import '../styles/base.css';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-sans">
    <head>
        <meta charset="UTF-8" />
        <meta property="og:title" content="Waytrack" />
        <meta property="og:description" content="Waytrack" />
        <meta property="og:url" content="https://waytrack.com/" />
        <meta property="og:image" content="/logo.png" />
        <meta property="og:image:alt" content="Waytrack Logo" />
        <meta property="og:type" content="website" />
        <meta property="title" content="Waytrack" />
        <meta property="description" content="Waytrack" />
        <meta property="url" content="https://waytrack.com/" />
        <meta property="image" content="/logo.png" />
        <meta property="image:alt" content="Waytrack Logo" />
        <meta property="type" content="website" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="Waytrack" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.ico" sizes="32x32" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="min-h-screen bg-page-bg-light">
        <div class="fixed inset-0 bg-gradient-to-br from-page-bg-light via-page-bg to-page-bg-dark opacity-95 -z-10"></div>
        <Nav />
        <main class="h-[calc(100vh-5rem)] flex items-center mt-20">
            <slot />
        </main>
    </body>
</html>