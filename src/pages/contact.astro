---
// src/pages/Contact.astro
import Layout from '../layouts/Layout.astro';

const contacts = [
    {
        name: "Alexander Bloom",
        position: "CEO & Director, Archive Product",
        email: "alexanderbloom@waytrack.co.uk",
        phone: "+447485619856",
        imageUrl: "alexanderbloom.jpg" // Replace with actual image path
    },
    {
        name: "Aron Finkelstein",
        position: "Advisor, Archive Operations",
        email: "aronfinkelstein@waytrack.co.uk",
        phone: "+447703576283",
        imageUrl: "aronfinkelstein.jpg" // Replace with actual image path
    }
];
---

<Layout title="Contact">
    <div class="min-h-[calc(100vh-5rem)] w-full flex items-start md:items-center">
        <div class="w-full pr-6 md:px-0 pt-8 md:pt-0">
            <div class="ml-auto md:mx-auto w-[400px] px-6 md:px-8">
                {contacts.map((contact) => (
                    <div class="mb-8 md:mb-12 flex items-start">
                        <div class="w-16 h-16 md:w-20 md:h-20 rounded-full overflow-hidden flex-shrink-0 mr-4">
                            <img 
                                src={contact.imageUrl} 
                                alt={`${contact.name}'s profile`} 
                                class="w-full h-full object-cover"
                            />
                        </div>
                        <div>
                            <h2 class="text-2xl md:text-3xl md:text-4xl font-bold mb-1 md:mb-2 text-text-primary">
                                {contact.name}
                            </h2>
                            <p class="text-lg md:text-xl md:text-[1.4rem] mb-3 md:mb-4 text-text-primary">
                                {contact.position}
                            </p>
                            <p class="text-base md:text-lg md:text-xl leading-relaxed mb-1 text-text-primary break-words">
                                {contact.email}
                            </p>
                            <p class="text-base md:text-lg md:text-xl leading-relaxed mb-1 text-text-primary">
                                {contact.phone}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</Layout>